    <h2>cURL Command to Send Push</h2>
    <div class="js-curl-command"></div>
    <!-- <button type="submit" id="secret" class="btn btn-danger js-push-button">Disable notifications</button> -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="js/config.js"></script>
    <script src="js/demo.js"></script>
    <script src="js/main.js"></script>
    <script>
      $(document).ready(function(){
            $("#secret").hide();
            $("#signupForm").submit(function(e) {

                var url = "/subscribe"; // the script where you handle the form input.
                
                if($("#accept")[0].checked){
                var data = {firstName: $("#firstName").val(),
                    	   lastName: $("#lastName").val(),
                    	   email: $("#email").val(),
                    	   gender: $("#gender").val(),
                            age :$("#age").val(),
                    	   cuisine: $("#cuisine").val()}
                
                $.ajax({
                       type: "POST",
                       url: url,
                       data:  data,
                       success: function(data)
                       {
                         alert("Thank You");
                         window.location.replace("/signup");
                       }
                     });
                }
                e.preventDefault(); // avoid to execute the actual submit of the form.
            });
      });
    </script>
